#include<stdio.h>

//float declaration
float add(float a,float b);
float subtract(float a,float b);
float multiply(float a, float b);
float division(float a, float b);
 int main(){
float num1,num2,result;
char operation;

printf("Enter first number:);
scanf("%f",&num1);

printf("Enter any operations:);
scanf("%c",&operation);

printf("Enter second number:);
scanf("%f",&num2);

switch (operation){
case '+':
result: add(float a,float b);
break;
case '-':
result: subtract(float a,float b);
break;
case '*':
result: multiply(float a,float b);
break;
case '/':
result: division(float a,float b);
break;
default:
printf("Error");
return 0;
}
printf("Result:%.2f\n",result);
return 0;
}

//funtion definitions
float add(float a, float b){
return a+b
}
float subtract(float a,float b){
return a-b }
float multiply(float a,float b){
return a*b }
float division(float a,float b)
{
if(b!=0)
{
return a/b
}
else 
{ 
printf("error not divisible");
return 0;
}
}
